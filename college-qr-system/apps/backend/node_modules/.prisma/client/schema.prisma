// prisma/schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native"]
}

model User {
  id           String       @id @default(cuid())
  rollNumber   String?      @unique
  username     String?      @unique
  name         String
  email        String       @unique
  passwordHash String
  role         Role
  isApproved   Boolean      @default(false)
  isVerified   Boolean      @default(false)
  otp          String?
  otpExpiry    DateTime?
  qrActivities QRActivity[]
  attendance   Attendance[]
  outings      Outing[]
  leaves       Leave[]
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
}

model QRActivity {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  scannedAt DateTime @default(now())
  location  String
  isValid   Boolean
}

model Attendance {
  id        String           @id @default(cuid())
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  date      DateTime
  status    AttendanceStatus
  createdAt DateTime         @default(now())
}

model Outing {
  id          String       @id @default(cuid())
  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
  purpose     String
  destination String
  startTime   DateTime
  endTime     DateTime?
  status      OutingStatus @default(PENDING)
  approvedBy  String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model Leave {
  id         String      @id @default(cuid())
  user       User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String
  reason     String
  startDate  DateTime
  endDate    DateTime
  status     LeaveStatus @default(PENDING)
  approvedBy String?
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
}

enum Role {
  STUDENT
  ADMIN
  GUARD
  SUPER_ADMIN
}

enum AttendanceStatus {
  PRESENT
  ABSENT
  LATE
}

enum OutingStatus {
  PENDING
  APPROVED
  REJECTED
  COMPLETED
}

enum LeaveStatus {
  PENDING
  APPROVED
  REJECTED
}
